<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ALL" name="MyApp" packages="">
    <Appenders>
        <File name="File" fileName="server.log">
            <MarkerFilter marker="SERVER" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="File" level="ALL" />
        </Root>
    </Loggers>
</Configuration>